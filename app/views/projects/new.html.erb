<%= form_for :project, url: '/projects/create' do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
 
  <%= f.fields_for :tasks do |task| %>
    <%= task.label :role %>
    <%= task.text_field :role %><br>
 
    <%= task.label :description %>
    <%= task.text_field :role %><br>
 
    <%= task.label :number %>
    <%= task.text_field :number %><br>
 
  <% end %>
 
  <%= f.submit %>
<% end %>
